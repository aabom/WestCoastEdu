<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Customer List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Customer" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-file-earmark-plus-fill"></i> Add New Customer
            </a>
        </div>
    </div>
    <br /><br />
    

    <table id="tblData" class="table table-bordered table-striped" style="width: 100%">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Street Address</th>
            <th>Postal Code</th>
            <th>City</th>
            <th></th>
        </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/customer.js"></script>
}
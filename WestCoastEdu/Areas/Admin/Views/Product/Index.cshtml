        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Length</th>
            <th>Level</th>
            <th>Start Date</th>
            <th>Location</th>
            <th>Status</th>
            <th></th>
        </tr>
        </thead>
    </table>
